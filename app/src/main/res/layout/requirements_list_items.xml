<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fVaccReq1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/nexalight"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:text="Requirement 1"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/fVaccReq1Required"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fVaccReq1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/nexalight"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:text="*required"
        android:textColor="@color/red"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/fVaccReq1Required"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fVaccReq1Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center_vertical"
            android:backgroundTint="#FEA400 "
            android:fontFamily="@font/nexablack"
            android:text="CHOOSE FILE"
            android:textColorLink="#FFC107" />

        <ImageView
            android:id="@+id/fVaccReq1Image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:scaleType="fitCenter" />
    </LinearLayout>



</RelativeLayout>