<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="12dp">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/lgu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/nexablack"
                android:text="LGU"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexablack"
                android:text="Requirements"
                android:layout_gravity="center"
                android:textSize="18dp" />

            <Button
                android:id="@+id/fullyVaccinatedButton"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#4CAF50"
                android:fontFamily="@font/nexablack"
                android:text="For COVID-19 Fully Vaccinated Individuals"
                android:textColorLink="#FFC107" />

            <Button
                android:id="@+id/unvaccinatedButton"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:backgroundTint="#F44336"
                android:fontFamily="@font/nexablack"
                android:text="For Unvaccinated or Incompletely Vaccinated Individuals"
                android:textColorLink="#FFC107" />

            <Button
                android:id="@+id/recoveredButton"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:backgroundTint="#2196F3"
                android:fontFamily="@font/nexablack"
                android:text="For Recovered COVID-19 positive travelers within 3 months from positive swab test results"
                android:textColorLink="#FFC107" />

            <ImageButton
                android:id="@+id/closeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_close"
                android:backgroundTint="@color/transparent"
                android:textSize="24dp" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>